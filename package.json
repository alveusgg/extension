  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alveusgg/extension.git"
  },
  "bugs": {
    "url": "https://github.com/alveusgg/extension/issues"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "cross-env NODE_ENV=development webpack serve --config src/webpack.config.ts",
    "build": "webpack --config src/webpack.config.ts",
    "lint:eslint": "eslint src --ext .ts,.tsx",
    "lint:prettier": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,scss}\"",
    "lint": "run-p lint:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run lint:prettier -- --write",
    "format": "run-p format:*"
  },
  "dependencies": {
    "@alveusgg/data": "github:alveusgg/data#pjeweb/improve-messages",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tmi.js": "^1.8.5"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@types/dotenv-webpack": "^7.0.7",
    "@types/node": "~20.14.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/tmi.js": "^1.8.6",
    "@types/twitch-ext": "^1.24.9",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "mini-css-extract-plugin": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^8.1.1",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^9.6.0",
    "prettier": "^3.3.3",
    "react-refresh-typescript": "^2.0.9",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.17.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-image-resize-loader": "^5.0.0"
  },
  "overrides": {
    "webpack-image-resize-loader": {
      "sharp": "^0.33.4"
    }
  },
  "main": "public/index.html",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
