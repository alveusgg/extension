{
  "name": "@alveusgg/extension",
  "version": "0.1.0",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alveusgg/extension.git"
  },
  "bugs": {
    "url": "https://github.com/alveusgg/extension/issues"
  },
  "engines": {
    "node": ">=24.11.0",
    "pnpm": "^10.11.1"
  },
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "prepare": "husky",
    "dev": "cross-env NODE_ENV=development NODE_OPTIONS=\"--loader ts-node/esm\" webpack serve",
    "build": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" webpack",
    "lint:eslint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:prettier": "prettier --check .",
    "lint": "pnpm run \"/^lint:.*/\"",
    "format:eslint": "pnpm lint:eslint --fix",
    "format:prettier": "pnpm lint:prettier --write",
    "format": "pnpm run \"/^format:.*/\"",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "@alveusgg/data": "0.71.0",
    "@headlessui/react": "^2.2.9",
    "luxon": "^3.7.2",
    "react": "^19.2.3",
    "react-canvas-confetti": "^2.0.7",
    "react-dom": "^19.2.3",
    "tmi.js": "^1.8.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/canvas-confetti": "^1.9.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/tmi.js": "^1.8.6",
    "@types/twitch-ext": "^1.24.9",
    "@types/zip-webpack-plugin": "^3.0.6",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "html-webpack-plugin": "^5.6.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mini-css-extract-plugin": "^2.10.0",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react-refresh-typescript": "^2.0.11",
    "style-loader": "^4.0.0",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.18",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3",
    "webpack-image-resize-loader": "^5.0.0",
    "zip-webpack-plugin": "^4.0.3"
  },
  "main": "public/index.html",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "./src/styles/tailwind.css"
  }
}
