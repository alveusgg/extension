{
  "name": "@alveusgg/extension",
  "version": "0.1.0",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alveusgg/extension.git"
  },
  "bugs": {
    "url": "https://github.com/alveusgg/extension/issues"
  },
  "engines": {
    "node": "22.x",
    "pnpm": "^9.14.2"
  },
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "prepare": "husky",
    "dev": "cross-env NODE_ENV=development NODE_OPTIONS=\"--loader ts-node/esm\" webpack serve",
    "build": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" webpack",
    "lint:eslint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:prettier": "prettier --check .",
    "lint": "run-p lint:*",
    "format:eslint": "pnpm lint:eslint --fix",
    "format:prettier": "pnpm lint:prettier --write",
    "format": "run-p format:*",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "@alveusgg/data": "0.58.0",
    "@headlessui/react": "^2.2.2",
    "luxon": "^3.6.1",
    "react": "^19.1.0",
    "react-canvas-confetti": "^2.0.7",
    "react-dom": "^19.1.0",
    "tmi.js": "^1.8.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.0",
    "@tailwindcss/postcss": "^4.1.5",
    "@types/canvas-confetti": "^1.9.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.15.14",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@types/tmi.js": "^1.8.6",
    "@types/twitch-ext": "^1.24.9",
    "@types/zip-webpack-plugin": "^3.0.6",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-run-all2": "^7.0.2",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react-refresh-typescript": "^2.0.10",
    "style-loader": "^4.0.0",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1",
    "webpack-image-resize-loader": "^5.0.0",
    "zip-webpack-plugin": "^4.0.3"
  },
  "pnpm": {
    "overrides": {
      "webpack-image-resize-loader>sharp": "^0.33.4",
      "@types/zip-webpack-plugin>@types/webpack": "^5.0.0"
    }
  },
  "main": "public/index.html",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindStylesheet": "./src/styles/tailwind.css"
  }
}
